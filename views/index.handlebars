<main>

  <h1>burgers</h1>
  
  <article>
    <section>
    <h2>to be eaten</h2>

    <ul>
      {{#each burgers}}
        {{#unless devoured}}
          {{> burger-block devoured=false}}
        {{/unless}}
      {{/each}}
    </ul>
    </section>

    <section>
    <h2>that are devoured</h2>

    <ul>
      {{#each burgers}}
        {{#if devoured}}
          {{> burger-block devoured=true}}
        {{/if}}
      {{/each}}
    </ul>
    </section>
  </article>

  <form id="form">
      <label for="burg-name">Add Burger</label>
      <input id="burg-name" type="text">
      <input id="create-burger" type="button" value="submit">
  </form>

</main>